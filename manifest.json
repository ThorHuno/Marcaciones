{
    "manifest_version": 2,
    "name": "Marcaciones",
    "version": "1.0",
    "description": "Extensi√≥n de Chrome para marcar entrada/salida laboral",
    "icons": {
        "16": "iconos/icon_dentro16.png",
        "128": "iconos/icon_dentro128.png"
    },
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "permissions": [
        "identity",
        "identity.email",
        "http://*/*",
        "https://*/*"
    ],
    "browser_action": {
        "default_popup": "index.html",
        "default_title": "Axxis Systems"
    },
    "content_security_policy": "script-src 'self' https://*.firebase.com https://*.firebaseio.com; object-src 'self'"
}