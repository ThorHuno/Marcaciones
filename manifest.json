{
    "manifest_version": 2,
    "name": "Marcaciones",
    "version": "1.0",
    "description": "Extensi√≥n de Chrome para marcar entrada/salida laboral",
    "icons": {
        "16": "iconos/icon_dentro16.png",
        "128": "iconos/icon_dentro128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "permissions": [
        "identity",
        "identity.email"
    ],
    "browser_action": {
        "default_popup": "index.html",
        "default_title": "Axxis Systems"
    }
}